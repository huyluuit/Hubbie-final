<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/border_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- IV Room -->
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivEditRoom"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:scaleY="1.5"
                android:layout_gravity="center"
                android:background="@drawable/ic_more" />

            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_room"/>

            <TextView
                android:text="RoomName"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginVertical="3dp"
            android:background="@android:color/black"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvTotalPower"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Điện năng tiêu thụ: "/>

            <View
                android:layout_width="match_parent"
                android:layout_marginVertical="3dp"
                android:background="@android:color/black"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Load1 Frame -->
                <LinearLayout
                    android:id="@+id/llLoad1Frame"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_width="90dp"
                    android:orientation="vertical"
                    android:gravity="top|center"
                    android:background="@drawable/border_tv"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvLoadName1"
                        android:text="LoadName1"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginVertical="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_device"/>

                    <Switch
                        android:id="@+id/swLoad1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Load2 Frame -->
                <LinearLayout
                    android:id="@+id/llLoad2Frame"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_width="90dp"
                    android:orientation="vertical"
                    android:gravity="top|center"
                    android:background="@drawable/border_tv"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvLoadName2"
                        android:text="LoadName2"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginVertical="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_device"/>

                    <Switch
                        android:id="@+id/swLoad2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!-- Load3 Frame -->
                <LinearLayout
                    android:id="@+id/llLoad3Frame"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:layout_width="90dp"
                    android:orientation="vertical"
                    android:gravity="top|center"
                    android:background="@drawable/border_tv"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvLoadName3"
                        android:text="LoadName3"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginVertical="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_device"/>

                    <Switch
                        android:id="@+id/swLoad3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>