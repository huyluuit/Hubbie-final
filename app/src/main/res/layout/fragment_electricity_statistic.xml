<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Electric Statistic"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/avenir_heavy"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_line"
        android:layout_below="@+id/txt_label"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "
            android:fontFamily="@font/avenir_heavy"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_name_label"
            android:text="Đinh Za Huấn"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_role_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_name_label"
            android:text="Role : "
            android:fontFamily="@font/avenir_heavy"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_role_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_role_label"
            android:layout_toRightOf="@+id/txt_name_label"
            android:text="Admin"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_role_label"
            android:text="Room : "
            android:fontFamily="@font/avenir_heavy"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/txt_room_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_room_label"
            android:layout_toRightOf="@+id/txt_room_label"
            android:text="001"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"/>
        
        <ImageView
            android:id="@+id/img_calendar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_room_label"
            android:src="@drawable/calendar"/>
        
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignBottom="@+id/img_calendar"
            android:layout_toRightOf="@+id/img_calendar"
            android:text="2020/01/03"
            android:fontFamily="@font/avenir_medium"
            android:textColor="@color/bgBottomNavigation"
            android:textSize="25dp"/>
        
        <LinearLayout
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_calendar"
            android:background="@color/colorBlack"
            android:orientation="vertical"/>
        
        <ImageView
            android:id="@+id/img_electric"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/flash"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/line_1"/>

        <TextView
            android:id="@+id/txt_electricity_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20kW/h"
            android:layout_alignBottom="@+id/img_electric"
            android:layout_toRightOf="@+id/img_electric"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/avenir_medium"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:id="@+id/img_total"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/money"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_electric"/>

        <TextView
            android:id="@+id/txt_electricity_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89.000 vnd"
            android:layout_alignBottom="@+id/img_total"
            android:layout_toRightOf="@+id/img_total"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/avenir_medium"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"/>

    </RelativeLayout>

</RelativeLayout>