<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:scaleX="0.85"
              android:scaleY="0.9"
              android:orientation="vertical"
              android:gravity="top"
              android:background="@drawable/border_item_device"
              android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvDeviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="DEVICE ID"/>

    <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_device"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    <TextView
            android:id="@+id/tvTemp"
            android:padding="10dp"
            android:background="@drawable/border_tv"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="NHIỆT ĐỘ: 29°C"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvTotalPower"
            android:padding="10dp"
            android:background="@drawable/border_tv"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="CÔNG SUẤT: 300W"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvRoomNameBelongDevice"
            android:padding="10dp"
            android:background="@drawable/border_tv"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Vị trí: Phòng 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>